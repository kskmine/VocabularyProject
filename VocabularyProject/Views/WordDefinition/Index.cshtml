@model IEnumerable<VocabularyProject.Models.WordDefinitionViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>WORD DEFINITION PAGE</h1>
<div class="row">
    <div class="col-md-4">
        <p>
            <a asp-action="Edit">Yeni Kelime Ekle</a>
        </p>
    </div>
    @*<div class="col-md-6"><input type="text" class="form-control"></div>
    <div class="col-md-2"><button type="button" class="btn btn"></div>*@
    <div class="example" action="/action_page.php">
        <input type="text" placeholder="Search.." name="search">
        <button type="submit"><i class="fa fa-search"></i></button>
    </div>
</div>


<div>
    <h2>Kelime</h2>

    <table>
        <tr>
            <th>ID</th>
            <th>KELIME</th>
            <th>DIL ID'Sİ</th>
            <th style="text-align:center ">EDIT-DELETE </th>
        </tr>
        @{int counter = 0; }
        @{
            foreach (WordDefinitionViewModel item in Model)
            {
                string bgColor = "cursor:pointer;";// " background-color: #f2f2f2;";
                if (counter % 2 == 0)
                {
                    bgColor += " background-color: #f2f2f2;";
                }
               <tr class="trMaster" style="@bgColor" onclick="showHideDetail('@Html.Raw($"det_{item.Id}")')">
                    <td>@item.Id</td>
                    <td>@item.Word</td>
                    @*<td>@item.LangName</td>*@
                    <td title="@item.LangName"></td>
                    <td>
                        <div class="text-center">
                            <a asp-route-id="@item.Id" class="btn btn-info" asp-action="Edit">EDIT</a>
                            @*<a asp-route-id="@item.Id" class="btn btn-info" asp-action="Details">DETAILS</a>*@
                            <a class="btn btn-warning " style="margin-left:5px" asp-route-id="@item.Id" asp-action="Delete">DELETE</a>
                        </div>
                    </td>
                </tr>
                <tr id="@Html.Raw("det_"+item.Id)" style="display:none">
                    <td colspan="4">
                        <table>
                            <tr>
                                <th>Meaning</th>
                                <th>Lang</th>
                            </tr>
                            @foreach (var meanin in item.Meanings)
                            {
                                <tr>
                                    <td>@meanin.Meaning</td>
                                    <td title="@meanin.SelectedLang.Name">@meanin.SelectedLang.Code</td>
                                </tr>
                            }
                        </table>
                    </td>
                </tr>

            }
            counter++;
        }
        
    </table>
</div>

@section Scripts{ 
    <script>
        function showHideDetail(elemId) {
            $("#" + elemId).toggle();
        }
        function refresh() {
            var searchKeyword = $('#searchKeyword').val();
         //   window.location.href = '/WordDefinition/Index?searchKeyword=' + searchKeyword
        }
    </script>
}

